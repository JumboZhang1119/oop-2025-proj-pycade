<!DOCTYPE html>
<html lang="en-us">
  <head>
    <meta charset="UTF-8" />
    <title>oop-2025-proj-pycade</title>
    <meta name="template-used" content="YES" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <link rel="icon" type="image/png" href="favicon.png" sizes="16x16" />
    <style>
      body {
        margin: 0;
        font-family: sans-serif;
        background: #1e1e1e;
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        overflow: hidden;
      }

      #canvas {
        display: none;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
      }

      #loader {
        text-align: center;
      }

      #start-button {
        margin-top: 20px;
        padding: 12px 24px;
        font-size: 18px;
        background-color: #0078d7;
        border: none;
        color: white;
        border-radius: 6px;
        cursor: pointer;
      }

      #start-button:hover {
        background-color: #005fa3;
      }
    </style>

    <script src="https://pygame-web.github.io/archives/0.9/browserfs.min.js"></script>
    <script src="https://pygame-web.github.io/archives/0.9/pythons.js"
            type="module"
            id="site"
            data-python="python3.12"
            data-os="vtx,fs,snd,gui"
            data-CONSOLE="25"
            data-LINES="57"
            async defer>
    </script>
  </head>

  <body>
    <div id="loader">
      <h1>Loading game...</h1>
      <progress value="0" max="100" id="progress"></progress>
      <div id="message">請點擊下方按鈕開始</div>
      <button id="start-button">點我開始</button>
    </div>

    <canvas id="canvas"
            oncontextmenu="event.preventDefault()"
            tabindex="1"
            class="emscripten"></canvas>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        let unlocked = false;

        const tryUnlock = () => {
          try {
            if (typeof AudioContext !== 'undefined') {
              const ctx = new AudioContext();
              if (ctx.state === "suspended") {
                ctx.resume().then(() => {
                  console.log("[AudioContext] resumed");
                });
              }
            }

            if (
              typeof platform !== "undefined" &&
              typeof platform.window !== "undefined" &&
              typeof platform.window.MM !== "undefined"
            ) {
              platform.window.MM.UME = true;
              console.log("[platform.window.MM] UME set to true");
              unlocked = true;

              // ✅ 切換畫面顯示 canvas、隱藏 loader
              document.getElementById("loader").style.display = "none";
              document.getElementById("canvas").style.display = "block";
            }
          } catch (e) {
            console.warn("Unlock attempt failed", e);
          }
        };

        const unlockWithInterval = () => {
          const interval = setInterval(() => {
            if (!unlocked) {
              tryUnlock();
            } else {
              clearInterval(interval);
            }
          }, 200);
        };

        document.getElementById("start-button").addEventListener("click", () => {
          unlockWithInterval();
        });
      });
    </script>
  </body>
</html>
